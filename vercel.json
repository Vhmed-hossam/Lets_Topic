{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|svg|ico|json))",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*?)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}
